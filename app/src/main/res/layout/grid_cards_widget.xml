<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <RelativeLayout
        android:id="@+id/grid_fidelity_cards_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_med"
        android:padding="5dp">
        <ImageView
            android:id="@+id/image_view_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/logodimeglio"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grid_fidelity_cards_title"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/image_view_logo"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"/>
    </RelativeLayout>
    <GridView
        android:id="@+id/grid_view_fidelity_cards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="4"
        android:gravity="center"
        android:layout_below="@id/grid_fidelity_cards_title_layout"
        android:background="@color/white"/>

</RelativeLayout>